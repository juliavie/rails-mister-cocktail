<div class="container">
  <div class="show-position">
    <div class="cocktail">
      <h2>The "<%= @cocktail.name %>"</h2>
      <%= cl_image_tag(@cocktail.photo.key, height: 200, width: 300, crop: :fill) if @cocktail.photo.attached? %>
      <h4>Dose/ingredients</h4>
      <ul>
        <% @cocktail.doses.each do |dose| %>
        <li> <%= dose.description %>
          <%= dose.ingredient.name %>
        </li>
        <% end %>
      </ul>
    </div>
    <div class="dose">
      <h3>Create a new dose</h3>
      <%= render "doses/form", cocktail: @cocktail, dose: @dose %>

      <%= link_to "Back to list", cocktails_path %>
    </div>
  </div>
</div>
